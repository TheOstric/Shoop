<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/distances_spinner"
        android:text="@string/distanza"
        android:textSize="20sp"
        android:id="@+id/distance_text"
        app:layout_constraintLeft_toLeftOf="@id/distances_spinner"
        />


    <ImageButton
        android:id="@+id/fab"
        android:layout_width="31dp"
        android:layout_height="25dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_info"
        android:background="@color/md_grey_200"
        app:layout_constraintLeft_toRightOf="@id/distance_text"
        app:layout_constraintTop_toTopOf="@id/distance_text"
        />

    <Spinner
        android:id="@+id/distances_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/time_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/time_spinner"
        android:text="@string/durata_database"
        app:layout_constraintLeft_toLeftOf="@id/time_spinner"
        />

    <ImageButton
        android:id="@+id/info_db"
        android:layout_width="31dp"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:background="@color/md_grey_200"
        android:src="@drawable/ic_info"
        app:layout_constraintLeft_toRightOf="@id/time_text"
        app:layout_constraintTop_toTopOf="@id/time_text" />

    <Spinner
        android:id="@+id/time_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintVertical_bias="0.517" />

</androidx.constraintlayout.widget.ConstraintLayout>